@model SMC.Date.Models.Users

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/font-awesome/css/font-awesome.css" />
    <link rel="stylesheet" href="~/css/style.css" type="text/css" />
    <script src="~/js/jquery-3.5.1.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <title>Регистрация</title>
    <style>
        body {
            background: url("../img/reg.jpg")no-repeat center center fixed;
            width: 100%;
            height: 100%;
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
        }
    </style>

</head >
<body>
    <div class="container">
        <div class="text-center">
            <img src="~/img/smc.png" style="margin-top: 100px" width="50%" />
            <div class="row justify-content-md-center">
                <div class="col col-lg-6">
                    <div class="m-1">
                        <input class="form-control" id="first" type="text" placeholder="Имя" / >
                    </div>
                    <div class="m-1">
                        <input class="form-control" id="last" type="text" placeholder="Фамилия" / >
                    </div>
                    <div class="m-1">
                        <input class="form-control" id="last" type="text" placeholder="Отчество" / >
                    </div>
                    <div class="m-1">
                        <input class="form-control" id="email" type="email" placeholder="name@example.com" / >
                    </div>
                    <div class="m-1">
                        <input class="form-control" id="email" type="number" placeholder="Номер телефона" / >
                    </div>
                    <div class="m-1">
                        <input class="form-control" id="password" type="password" placeholder="Пароль" / >
                    </div>
                    <div class="m-1">
                        <input class="form-control" id="password" type="password" placeholder="Повторите пароль" / >
                    </div>
                    <div class="m-1">
                        <select class="form-control custom-select" id="country">
                            <option selected> Фото</option>
                            <option> Видео</option>
                            <option> Статьи</option>
                        </select>
                    </div>
                    <div class="m-1">
                        <input class="form-control" id="group" type="text" placeholder="Группа" / >
                    </div>
                    <div class="text-xs-center">
                        <div class="m-1">
                            <button class="btn btn-block btn-danger" type="submit"> Регистрация</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html >
